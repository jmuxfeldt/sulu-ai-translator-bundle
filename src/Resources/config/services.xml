<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services https://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="ai_translator.admin"
            class="Robole\SuluAITranslatorBundle\Admin\AITranslatorAdmin">
            <argument type="service" id="sulu_admin.view_builder_factory" />
            <argument type="service" id="sulu_security.security_checker" />
            <argument>%sulu_admin.name%</argument>

            <tag name="sulu.admin" />
            <tag name="sulu.context" context="admin" />
        </service>

        <!-- DeepL Service -->
        <service id="ai_translator.deepl_service"
            class="Robole\SuluAITranslatorBundle\Service\DeeplService">
            <argument>%sulu_ai_translator.deepl_api_key%</argument>
        </service>

        <!-- OpenAI Service -->
        <service id="ai_translator.openai_service"
            class="Robole\SuluAITranslatorBundle\Service\OpenAIService">
            <argument>%sulu_ai_translator.openai_api_key%</argument>
            <argument>%sulu_ai_translator.openai_model%</argument>
            <argument>%sulu_ai_translator.openai_context%</argument>
        </service>

                <!-- Active Translator Service (will be set by compiler pass) -->
        <service id="ai_translator.translator_service"
            alias="ai_translator.deepl_service"
            public="true" />
    </services>
</container>
