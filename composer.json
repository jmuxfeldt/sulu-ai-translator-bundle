{
    "name": "robole/sulu-ai-translator-bundle",
    "description": "Translate any type of content using DeepL or OpenAI GPT-4",
    "type": "symfony-bundle",
    "require": {
        "php": "^8.2",
        "sulu/sulu": "^2.5",
        "symfony/config": "^6.2 | ^7.0",
        "symfony/dependency-injection": "^6.2 | ^7.0",
        "symfony/framework-bundle": "^6.2 | ^7.0",
        "symfony/http-foundation": "^6.2 | ^7.0",
        "symfony/http-kernel": "^6.2 | ^7.0",
        "symfony/intl": "^6.2 | ^7.0",
        "symfony/translation": "^6.2 | ^7.0",
        "symfony/security-core": "^6.3 | ^7.0",
        "deeplcom/deepl-php": "^1.7",
        "openai-php/client": "^0.8"
    },
    "homepage": "https://github.com/robole-dev/sulu-ai-translator-bundle",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Robole\\SuluAITranslatorBundle\\": "src/"
        }
    },
    "authors": [
        {
            "name": "falbroscheit",
            "email": "felix.albroscheit@robole.de"
        }
    ],
    "config": {
        "allow-plugins": {
            "symfony/flex": true,
            "php-http/discovery": true
        }
    }
}
